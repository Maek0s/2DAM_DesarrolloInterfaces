<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AYUDA.Pages.Page4"
             Title="Direccion">
    <VerticalStackLayout>
        <Label 
            Text="Escriba su dirección:"
            FontSize="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="casa.png"
               HeightRequest="150"/>

        <Entry x:Name="entDireccion"
               Text=""
               WidthRequest="500"
               HorizontalOptions="Center"/>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Margin="0,20,0,0">
            
            <Button x:Name="btnAnterior"
                Text="◀ Anterior"
                Clicked="btnAnterior_Clicked"
                HorizontalOptions="Center"
                Margin="0,0,10,0"/>
            
            <Button x:Name="btnSiguiente"
                Text="Siguiente ▶"
                Clicked="btnSiguiente_Clicked"
                HorizontalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>