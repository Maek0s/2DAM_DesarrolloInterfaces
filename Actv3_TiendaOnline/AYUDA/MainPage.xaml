<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AYUDA.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label 
                    Text="¡Bienvenido a tu tienda de confianza!"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"/>
            
            <Image  Source="tiendalogo.png"
                    HeightRequest="200"/>

            <Button x:Name="btnComenzar"
                    Text="Comenzar a comprar"
                    FontAttributes="Bold"   
                    BackgroundColor="Green"
                    WidthRequest="200"
                    Clicked="btnComenzar_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
